{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "zig build -Dztracy-enable=true -Dtarget=native-native-msvc --summary failures",
            // "command": "zig build -Dztracy-enable=false -Dtarget=native-native-msvc --summary failures -freference-trace --verbose",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "clear": true,
                // "revealProblems": "onProblem"
            }
        },
        {
            "label": "build_simulator",
            "type": "shell",
            "command": "zig build --summary failures",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "options": {
                "cwd": "${workspaceFolder}/tools/simulator/"
            },
            "presentation": {
                "clear": true,
            }
        },
        {
            "label": "zig test",
            "type": "process",
            "command": "zig",
            "args": [
                "test",
                "--main-pkg-path",
                "${workspaceFolder}/src",
                "${file}"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            // "problemMatcher": [
            //     "$gcc"
            // ],
            "presentation": {
                "clear": true,
                // "showReuseMessage": false,
                // "revealProblems": "onProblem"
            }
        },
        {
            "label": "World Gen",
            "type": "process",
            "command": "python",
            "args": [
                "full_pull.py",
                "--world-gen"
            ],
            "group": {
                "kind": "none",
                "isDefault": false
            },
            // "problemMatcher": [
            //     "$gcc"
            // ],
            "presentation": {
                "clear": true,
                // "showReuseMessage": false,
                // "revealProblems": "onProblem"
            }
        },
        {
            "label": "build_c2z",
            "type": "shell",
            "command": "zig build",
            "group": "build2",
            "problemMatcher": [
                "$gcc"
            ],
            "options": {
                "cwd": "${workspaceFolder}/external/c2z/"
            },
            "presentation": {
                "clear": true,
                // "revealProblems": "onProblem"
            }
        },
    ]
}