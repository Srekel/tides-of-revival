{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "zig build -Dztracy-enable=false -Dzd3d12-enable_debug_layer=false",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "clear": true,
                // "revealProblems": "onProblem"
            }
        },
        {
            "label": "zig test",
            "type": "process",
            "command": "zig",
            "args": [
                "test",
                "--main-pkg-path",
                "${workspaceFolder}/src",
                "${file}"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            // "problemMatcher": [
            //     "$gcc"
            // ],
            "presentation": {
                "clear": true,
                // "showReuseMessage": false,
                // "revealProblems": "onProblem"
            }
        }
    ]
}